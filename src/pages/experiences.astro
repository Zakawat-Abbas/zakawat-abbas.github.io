---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../layouts/Footer.astro';
import { experiences } from '../constant';
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
import { IoIosArrowForward } from "react-icons/io";
---

<BaseLayout
  title="Experiences | Zakawat Abbas"
  description="Professional work experience of Zakawat Abbas"
>
  <section id="experiences" class="py-8 md:py-16 mx-auto max-w-7xl px-6">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-50">Work Experience</h1>
      <p class="mt-3 text-gray-600 dark:text-gray-400">My professional journey and key contributions</p>
    </div>

    <div class="space-y-6">
      {
        experiences.map((exp) => (
          <Card className="overflow-hidden hover:shadow-lg transition-shadow">
            <CardContent className="p-6">
              <div class="flex flex-col md:flex-row gap-6">
                {/* Company Logo */}
                <div class="shrink-0">
                  <div class="h-20 w-20 rounded-xl overflow-hidden bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 flex items-center justify-center p-2">
                    <Image
                      src={exp.logo}
                      alt={`${exp.company} logo`}
                      class="h-full w-full object-contain rounded-sm"
                      width={80}
                      height={80}
                      loading="eager"
                      decoding="async"
                      fetchpriority="high"
                    />
                  </div>
                </div>

                {/* Content */}
                <div class="flex-1 space-y-4">
                  <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-3">
                    <div>
                      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-50">
                        <a
                          href={exp.link}
                          target="_blank"
                          class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors"
                        >
                          {exp.company}
                        </a>
                      </h2>
                      <p class="mt-1 text-base font-medium text-gray-700 dark:text-gray-300">
                        {exp.position}
                      </p>
                    </div>
                    <div class="flex flex-col items-start md:items-end gap-1">
                      {exp.periods.map((p) => (
                        <Badge variant="secondary" className="text-xs">
                          {p}
                        </Badge>
                      ))}
                    </div>
                  </div>

                  <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm text-gray-600 dark:text-gray-400">
                    <div>
                      <span class="font-medium">Type:</span> {exp.employmentType}
                    </div>
                    <div>
                      <span class="font-medium">Location:</span> {exp.location}
                    </div>
                  </div>

                  <div class="space-y-2">
                    <h3 class="font-medium text-gray-900 dark:text-gray-100">
                      Key Responsibilities:
                    </h3>
                    <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
                      {exp.responsibilities.map((r) => (
                        <li class="flex items-center gap-2">
                          <IoIosArrowForward className="text-blue-900" />
                          <span class="leading-relaxed">{r}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </section>

  <Footer />
</BaseLayout>
