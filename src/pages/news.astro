---
import BaseLayout from '../layouts/BaseLayout.astro';
import { news } from '../constant';
import Footer from '../layouts/Footer.astro';
import { Card, CardContent } from '../components/ui/card';
---

<BaseLayout
  title="News | Zakawat Abbas"
  description="Latest updates and news from Zakawat Abbas"
>
  <section id="news" class="py-20 mx-auto max-w-7xl px-6">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-50">News</h1>
      <p class="mt-3 text-gray-600 dark:text-gray-400">
        Recent updates and milestones in my professional journey
      </p>
    </div>

    <Card>
      <CardContent className="p-0">
        <ul class="divide-y divide-gray-200 dark:divide-gray-800">
          {
            news.map(({ date, text }) => (
              <li class="flex flex-col sm:flex-row gap-4 sm:gap-8 p-6 hover:bg-gray-50 dark:hover:bg-gray-900/50 transition-colors">
                <span class="shrink-0 font-mono text-sm text-gray-500 dark:text-gray-400 min-w-[120px]">
                  {date}
                </span>
                <span class="text-gray-900 dark:text-gray-100 leading-relaxed">{text}</span>
              </li>
            ))
          }
        </ul>
      </CardContent>
    </Card>
  </section>

  <Footer />
</BaseLayout>
